[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .env,
    .venv,
    env
ignore = 
    # E203: whitespace before ':' (black formats differently)
    E203,
    # W503: line break before binary operator (black formats differently)
    W503,
    # E501: line too long (handled by black)
    E501
per-file-ignores =
    # F401: imported but unused (allow in __init__.py files)
    __init__.py:F401
max-complexity = 10
select = B,C,E,F,W,T4,B9

